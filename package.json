{
  "name": "globetrotter-platform",
  "version": "1.0.0",
  "description": "World-class travel planning platform with multiple dashboards",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start": "node server/index.js"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "html-to-text": "^9.0.5",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.3",
    "nodemailer": "^6.9.4",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "travel",
    "planning",
    "dashboard",
    "react",
    "nodejs",
    "mysql"
  ],
  "author": "GlobeTrotter Team",
  "license": "MIT"
}
